/* H2: 底部加一条灰线，模拟“书本章节”的感觉 */
.post-body h1 {
    border-bottom: 2px solid #eaecef; /* 底部灰线 */
    padding-bottom: 10px;             /* 文字和线的距离 */
    margin-top: 50px;                 /* 离上一段远一点 */
    font-size: 1.5em;                 /* 字体大一点 */
    color: #2c3e50;                   /* 深色 */
}

/* H3: 左侧加一个竖条，模拟“重点标记” */
.post-body h2 {
    border-left: 5px solid #b3b3b3;   /* 左侧蓝条 */
    padding-left: 10px;               /* 文字离蓝条的距离 */
    margin-top: 30px;                 /* 稍微有点距离 */
    font-size: 1.25em;
    /* background: #f9f9f9;               可选：加个浅灰背景条 */
}

.with-love {
    color: #919191
}

.darkmode-layer, .darkmode-toggle {
  z-index: 41;
}

/* 默认状态（浅色模式）：显示月亮，隐藏太阳 */
.darkmode-toggle .fa-sun {
    display: none;
}
.darkmode-toggle .fa-moon {
    display: inline-block;
}

/* 激活状态（深色模式）：显示太阳，隐藏月亮 */
body.darkmode--activated .darkmode-toggle .fa-sun {
    display: inline-block;
}
body.darkmode--activated .darkmode-toggle .fa-moon {
    display: none;
}

/* 修正图标位置（可选，防止图标偏离中心） */
.darkmode-toggle i {
    font-size: 1.5rem; /* 调整图标大小 */
    line-height: 3rem; /* 保持垂直居中 */
    z-index: 500;
}

.darkmode--activated {

    img:not(.site-author-image),video,.emoji,.github-emoji,.darkmode-ignore,aside.sidebar {
        filter: invert(100%);
    }

    code {
        color: #555;
        background: #e1e1e1;
    }
}

